<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="loqale_proximity"
        android:title="@string/pref_title_recommendation_distance"
        android:entries="@array/recommendation_distance_entries"
        android:entryValues="@array/recommendation_distance_values"
        android:defaultValue="1000" />

    <EditTextPreference
        android:key="loqale_name"
        android:title="@string/pref_title_display_name"
        android:defaultValue="@string/pref_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
</PreferenceScreen>
